{
  "name": "apluscademy",
  "version": "1.0.0",
  "main": "dist/index.js",
  "license": "MIT",
  "scripts": {
    "devBuildAll": "docker compose -f .docker/docker-compose-dev.yml build",
    "devStartDB": "docker compose -f .docker/docker-compose-dev.yml up -d mongodb",
    "devStartAll": "docker compose -f .docker/docker-compose-dev.yml up --attach webapp",
    "devStopAll": "docker compose -f .docker/docker-compose-dev.yml down",
    "devStartServer": "yarn tsnd -r dotenv/config --respawn index.ts",
    "prodStartServer": "yarn tsc && node dist/index.js"
  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "connect-sqlite3": "^0.9.13",
    "ejs": "^3.1.8",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "mongoose": "^6.8.0",
    "passport": "^0.6.0",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-sqlite3": "^0.9.1",
    "@types/express": "^4.17.14",
    "@types/express-session": "^1.17.5",
    "@types/passport": "^1.0.11",
    "@types/passport-local": "^1.0.34",
    "dotenv": "^16.0.3",
    "prettier": "^2.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.9.4"
  }
}
