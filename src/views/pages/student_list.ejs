<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body>
    <header><%- include('../partials/header'); %></header>

    <main class="w-screen">
      <div class="w-full">
        <div class="grid grid-cols-4 gap-5 ml-24 mr-24 mt-5 mb-24">
          <% students.forEach(function(student) { %>
          <div class="mt-3 relative">
            <% if (student) { %>
            <form action="/student/delete/<%=student._id%>" method="post">
              <button class="btn btn-sm btn-circle -right-3 -top-3 absolute">âœ•</button>
            </form>
            <% } %>
            <a href="/student/<%=student._id%>">
              <div class="w-full aspect-square border">
                <img src="https://s.udemycdn.com/home/top-categories/lohp-category-design-2x-v2.jpg" />
              </div>
              <div class="flex justify-between">
                <div class="font-semibold text-xl"><%= student.profile.name %></div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </main>
    <footer><%- include('../partials/footer'); %></footer>
  </body>
</html>
